generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id              Int     @id @default(autoincrement())
  subdomain       String  @unique
  api             String
  nomeLoja        String  @map("nome_loja")
  descricaoLoja   String? @map("descricao_loja")
  urlLogoLoja     String? @map("url_logo_loja")
  whatsappPedidos String? @map("whatsapp_pedidos")

  @@map("tenant")
}
