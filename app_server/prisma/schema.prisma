generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id       Int       @id @default(autoincrement())
  slug     String    @unique
  nome     String
  produtos Produto[]

  @@map("categoria")
}

model Marca {
  id       Int       @id @default(autoincrement())
  slug     String    @unique
  nome     String
  produtos Produto[]

  @@map("marca")
}

model Produto {
  id         Int         @id @default(autoincrement())
  slug       String      @unique
  nome       String
  preco      Int
  descricao  String?
  categorias Categoria[]
  marca      Marca?      @relation(fields: [marcaId], references: [id])
  marcaId    Int?

  @@map("produto")
}
