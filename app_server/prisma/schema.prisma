generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id        Int       @id @default(autoincrement())
  slug      String    @unique
  nome      String
  imagemUrl String?
  produtos  Produto[]

  @@map("categoria")
}

model Marca {
  id       Int       @id @default(autoincrement())
  slug     String    @unique
  nome     String
  produtos Produto[]

  @@map("marca")
}

model Produto {
  id         Int         @id @default(autoincrement())
  slug       String      @unique
  nome       String
  preco      Int
  descricao  String?
  categorias Categoria[]
  marca      Marca?      @relation(fields: [marcaId], references: [id])
  marcaId    Int?
  secoes     Secao[]

  @@map("produto")
}

enum SecaoTipo {
  personalizado
  novidade
  mais_vendidos

  @@map("secao_tipo")
}

model Secao {
  id       Int       @id @default(autoincrement())
  nome     String    @db.VarChar(40)
  tipo     SecaoTipo @default(personalizado)
  ativo    Boolean   @default(false)
  ordem    Int?
  produtos Produto[]

  @@map("secao")
}
